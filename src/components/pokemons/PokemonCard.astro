---
interface Props {
  url: string;
  name: string;
  isBig?: boolean;
}

const { url, name, isBig = false } = Astro.props;
const id = url.split("/").at(-2);
const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
console.log("id", id);
---

<a
  href={`/pokemons/${name}`}
  class:list={[
    `rounded flex flex-col justify-center items-center p-2 mt-2`,
    {
      border: !isBig,
    },
  ]}
>
  <img
    transition:name={`${name}-image`}
    src={imageSrc}
    alt={name}
    class:list={[{ "w32 h-32": !isBig }, { "w-64 h-64": isBig }]}
  />
  <span class:list={["mt-2 capitalize", { "text-4xl text-blue-300": isBig }]}
    >{isBig && `#${id} `}{name}</span
  >
</a>
