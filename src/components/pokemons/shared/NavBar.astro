---
const links = [
  { href: "/", text: "Listado" },
  { href: "/pokemons/1", text: "Paginado" },
  { href: "/favorites", text: "Favoritos" },
  { href: '/islands', text: 'Islas' },
];

const currentPath = Astro.url;
---

<!-- component -->
<nav class="bg-slate-900 text-slate-100">
  <div
    class="container flex items-center justify-center p-6 mx-auto text-gray-300 capitalize dark:text-gray-300"
  >
    {
      links.map((link) => (
        <div>
          <a
            href={link.href}
            class="text-gray-200 dark:text-gray-200 mx-1.5 sm:mx-6"
          >
            {link.text}
          </a>
          {currentPath.pathname === link.href && (
            <div
              class="border-b-2 border-blue-500 mx-5"
              transition:name="menu-line"
            />
          )}
        </div>
      ))
    }
